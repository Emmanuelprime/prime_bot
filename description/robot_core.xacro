<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >
    <xacro:include filename="inertial_macros.xacro"/>
    
    

    <material name="white">
        <color rgba="1.0 1.0 1.0 1.0"/>
        
    </material>

    <material name="black">
        <color rgba="1.0 1.0 1.0 1.0"/>
        
    </material>

    <material name="red">
        <color rgba="1.0 1.0 1.0 1.0"/>
        
    </material>
    <material name="blue">
        <color rgba="1.0 1.0 1.0 1.0"/>
        
    </material>

    <!-- This is our Base Link-->
    <link name="base_link">
        
    </link>

    <joint name="chasis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chasis"/>
        <origin xyz="-0.1 0.0 0.0"/>
    </joint>
     
<!-- This is our chasis Link-->
    <link name="chasis">
        <visual>
            <origin xyz="0.116 0.0 0.0555"/>
            <geometry>
                <box size="0.232 0.115 0.111"/>
            </geometry>
            <material name="white">
                
            </material>
        </visual>


        <collision>
            <origin xyz="0.116 0.0 0.0555"/>
            <geometry>
                <box size="0.232 0.115 0.111"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.232" y="0.155" z="0.111">
            <origin xyz="0.116 0.0775 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
        
        
    </link>

    <!-- This is our Left Wheel Link-->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.0 0.0775 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
        
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>

    </link>

    <!-- This is our Right Wheel Link-->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.0 -0.0775 0.0" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 -1"/>
        
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>

         <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
         </collision>
         <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- This is our Caster wheel Link-->

    <joint name="caster_wheel_joint" type="fixed">
        <origin xyz="0.1856 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="chasis"/>
        <child link="caster_wheel"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>

</robot>